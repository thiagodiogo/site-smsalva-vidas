<head>
	<meta http-equiv="content-type" content="text/html; charset=utf-8" />
	<meta name="keywords" content="smsalva-vidas sms geolocation rails" />
	<meta name="description" content="" />
	<title>Projeto SMSalva-vidas</title>
	<%= stylesheet_link_tag    "application" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
	<%= yield :head %>
</head>
<body>
	<!-- start header -->
	<div id="header">
		<h1><a href="<%= root_path %>" ><div id="sms">SMS</div><span>alva-vidas</span></a></h1>
		<h2>Salvando vidas usando SMS</h2>
	</div>
	<div id="page">
		<!-- start sidebar -->
		<div id="sidebar">
			<ul>
				<li>
					<h2>o projeto</h2>
					<ul>
						<li><%= link_to 'Home', root_path %></a></li>
						<li><%= link_to 'Como funciona?', como_funciona_path %></a></li>
						<li><%= link_to 'Detalhes do projeto', o_projeto_path %></a></li>
					</ul>
				</li>
				<li>
					<h2>a solução</h2>
					<ul>
						<li><%= link_to 'Screenshots', "#" %></a></li>
						<li><%= link_to 'Documentação', documentacao_path %></li>
						<li><%= link_to 'Download', download_path %></li>
					</ul>
				</li>
				<li>
					<h2>comunidade</h2>
					<ul>
						<li><%= link_to 'Contribua!', "#" %></a></li>
					</ul>
				</li>
			</ul>
			<div style="clear: both;">&nbsp;</div>
		</div>
		<!-- end sidebar -->
		<!-- start content -->
		<div id="content">
			<div class="flash">
				<% flash.each do |type, message| -%>
				<div class="flash <%= type %>">
					<p><%= message %></p>
				</div>
				<% end -%>
			</div>
			<div id="main">
				<%= yield %>
			</div>
			<!-- end content -->
		</div>
		<!-- end page -->
		<div id="footer">
			<p id="links"><%= link_to 'Política de privacidade', "#" %> | <%= link_to 'Termos de uso', "#" %> | <a href="http://validator.w3.org/check/referer" title="This page validates as XHTML 1.0 Transitional"><abbr title="eXtensible HyperText Markup Language">XHTML</abbr></a> | <a href="http://jigsaw.w3.org/css-validator/check/referer" title="This page validates as CSS"><abbr title="Cascading Style Sheets">CSS</abbr></a></p>
			<p id="legal">Desenvolvido por <a href="http://thiagodiogo.blogspot.com">Thiago Diogo</a> @<%= Time.now.year %></p>
		</div>
	</body>
